{
  "name": "claudex",
  "version": "0.1.0",
  "private": true,
  "description": "Claudex â€” visual desktop wrapper for Claude Code CLI",
  "author": "Claudex",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --port 5173 --strictPort",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build:renderer": "tsc -b && vite build",
    "dist:win": "npm run build:renderer && electron-builder --win",
    "dist:mac": "npm run build:renderer && electron-builder --mac",
    "build": "npm run dist:win",
    "preview": "vite preview",
    "start": "electron .",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"electron/**/*.cjs\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"electron/**/*.cjs\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@ai-sdk/react": "^2.0.57",
    "@anthropic-ai/claude-agent-sdk": "0.2.45",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@rive-app/react-webgl2": "^4.27.0",
    "@streamdown/cjk": "^1.0.2",
    "@streamdown/code": "^1.0.2",
    "@streamdown/math": "^1.0.2",
    "@streamdown/mermaid": "^1.0.2",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "@xyflow/react": "^12.10.0",
    "ai": "^5.0.133",
    "ansi-to-react": "^6.2.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.542.0",
    "media-chrome": "^4.17.2",
    "monaco-editor": "^0.55.1",
    "motion": "^12.34.0",
    "nanoid": "^5.1.6",
    "node-pty": "^1.1.0",
    "radix-ui": "^1.4.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-jsx-parser": "^2.4.1",
    "react-virtuoso": "^4.18.1",
    "shiki": "^3.22.0",
    "streamdown": "^2.2.0",
    "tailwind-merge": "^3.3.1",
    "tokenlens": "^1.3.1",
    "use-stick-to-bottom": "^1.1.3",
    "xterm": "^5.3.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.8.1",
    "electron-updater": "^6.8.3",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.1.3",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "electron/**/*.cjs": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "io.claudex.app",
    "productName": "Claudex",
    "icon": "public/logo.png",
    "afterSign": "scripts/afterSign.cjs",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "scripts/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/node-pty/**/*",
      "node_modules/@anthropic-ai/claude-agent-sdk/**/*",
      "node_modules/electron-updater/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Serxo1",
        "repo": "Claudex"
      }
    ],
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "msi", "arch": ["x64"] }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "notarize": true
    },
    "dmg": {
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "npmRebuild": false
  }
}
